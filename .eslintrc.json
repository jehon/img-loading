{
	"root": true,
	"extends": "eslint:recommended",
	"env": {
		"es6": true,
		"browser": true,
		"jasmine": true
	},
	"sourceType": "module",
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "local",
				"argsIgnorePattern": "^_"
			}
		],
		"no-console": [
			"error",
			{
				"allow": [
					"warn",
					"error",
					"info",
					"assert"
				]
			}
		],
		"no-trailing-spaces": [
			"error"
		],
		"no-warning-comments": "off"
	}
}